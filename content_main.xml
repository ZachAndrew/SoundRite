<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="andrew.zach.soundrite.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@color/colorBlack">
<!--  *For referencing custom made buttons from  'MainActivity.java' *
<andrew.zach.soundrite.MainActivity.PlayButton
xmlns:android="http://schemas.android.com/apk/res/android"
style="@style/AppTheme.NoActionBar"/>

   <andrew.zach.soundrite.MainActivity.RecordButton
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.NoActionBar"/> -->


    <Switch
        android:id="@+id/switch_listen"
        android:layout_width="88dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorGrey"
        android:text="OFF"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button_Record"
        app:layout_constraintLeft_toLeftOf="@+id/button_Record"
        app:layout_constraintRight_toRightOf="@+id/button_Record"
        tools:theme="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="304dp"
        android:layout_height="186dp"
        android:layout_marginBottom="115dp"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/retro_mic_1"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_Record"
        android:layout_width="102dp"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:text="Record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_playback"
        android:layout_width="99dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="Playback"
        app:layout_constraintBottom_toBottomOf="@+id/button_Record"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_Record"
        app:layout_constraintTop_toTopOf="@+id/button_Record"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="94dp"
        android:layout_height="55dp"
        android:layout_marginBottom="-17dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="@+id/button_Record"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintLeft_toRightOf="@+id/button_Record"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_Record" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="354dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/soundrite_logo_1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView_feedback"
        android:layout_width="369dp"
        android:layout_height="89dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorGrey"
        android:text="FeedBack:"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_score"
        android:layout_width="64dp"
        android:layout_height="23dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Score:"
        android:textAlignment="center"
        android:textColor="@color/colorYellow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView_scoreText"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Value"
        android:textAlignment="center"
        android:textColor="@color/colorYellow"
        app:layout_constraintBottom_toTopOf="@+id/switch_listen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView_score"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_extraInfo"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Extra info"
        android:textAlignment="center"
        android:textColor="@color/colorYellow"
        app:layout_constraintBottom_toTopOf="@+id/button_playback"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/switch_listen"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/button_stop_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Stop Rec"
        app:layout_constraintBottom_toTopOf="@+id/button_stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toEndOf="@+id/switch_listen"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
